{
  "name": "@1log/core",
  "version": "0.0.1",
  "description": "A modular logging framework",
  "repository": "https://github.com/ivan7237d/1log.git",
  "license": "MIT",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "files": [
    "build/main",
    "build/module",
    "!**/*.test.*",
    "!**/setupTests.*"
  ],
  "sideEffects": false,
  "scripts": {
    "prebuild": "rm -rf build",
    "build": "run-p --print-label build:*",
    "build:main": "tsc",
    "build:module": "tsc -p tsconfig.module.json",
    "test:tsc": "tsc --noEmit"
  },
  "dependencies": {
    "antiutils": "^4.0.1",
    "monomemo": "^1.0.1"
  }
}
